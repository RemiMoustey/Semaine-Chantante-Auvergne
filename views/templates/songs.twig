{% extends 'layout.twig' %}
{% import 'song.twig' as song %}

{% block head %}
    <link rel="stylesheet" href="public/css/songs-videos-pages.css" />
    <title>Musiques</title>
{% endblock %}

{% block content %}
    <div class="container-fluid text-videos-songs">
        <h1 class="briquet title-page">Aquarelle chante</h1>
        <div class="mb-5"><img class="img-fluid" src="./public/img/songs/bandeau_aquarelle.png" alt="Le groupe Aquarelle" /></div>
        <p class="text-center harmonisation">Les harmonisations du groupe Aquarelle sont de Véronique.</p>
        <div class="songs d-lg-flex justify-content-center text-center mb-5">
            <div class="group-song">
                {{ song.blockSong("À nos actes manqués", "Jean-Jacques Goldman.", "a_nos_actes_manques") }}
                {{ song.blockSong("Alia Souza", "Véronique Sanson", "alia_souza") }}
                {{ song.blockSong("Bébédum", "Philippe Lafontaine", "bebedum") }}
                {{ song.blockSong("Bluesy", "Michel Fugain", "bluesy") }}
                {{ song.blockSong("Boule de gomme", "TSF", "boule_de_gomme") }}
                {{ song.blockSong("Cœur de loup", "Philippe Lafontaine", "coeur_de_loup") }}
            </div>
            <div class="group-song">
                {{ song.blockSong("Du mal", "Maurane", "du_mal") }}
                {{ song.blockSong("Le piano de mauvaise vie", "Claude Nougaro", "le_piano_de_mauvaise_vie") }}
                {{ song.blockSong("Le rêve du pêcheur", "Alain Souchon / Laurent Voulzy", "le_reve_du_pecheur") }}
                {{ song.blockSong("Quand ça balance", "Michel Legrand", "quand_ca_balance") }}
                {{ song.blockSong("Les yeux doux", "Liane Foly", "les_yeux_doux") }}
                {{ song.blockSong("Version latine", "Michel Fugain", "version_latine") }}
            </div>
        </div>
    </div>
    <script src="./public/js/management-songs.js"></script>
{% endblock %}