{% extends 'layout.twig' %}
{% import 'song.twig' as song %}

{% block head %}
    <link rel="stylesheet" href="public/css/songs-videos-pages.css" />
    <title>Musiques</title>
{% endblock %}

{% block content %}
    <div class="container-fluid text-videos-songs">
        <h1 class="briquet title-page">Aquarelle chante</h1>
        <div class="mb-5"><img class="img-fluid" src="./public/img/songs/bandeau_aquarelle.png" alt="Le groupe Aquarelle" /></div>
        <div class="songs d-lg-flex justify-content-center text-center">
            <div class="group-song">
                {{ song.blockSong("À nos actes manqués", "Paragraphe", "a_nos_actes_manques") }}
                {{ song.blockSong("Alia Souza", "Paragraphe", "alia_souza") }}
                {{ song.blockSong("Bébédum", "Paragraphe", "bebedum") }}
                {{ song.blockSong("Bluesy", "Paragraphe", "bluesy") }}
                {{ song.blockSong("Boule de gomme", "Paragraphe", "boule_de_gomme") }}
                {{ song.blockSong("Cœur de loup", "Paragraphe", "coeur_de_loup") }}
            </div>
            <div class="group-song">
                {{ song.blockSong("Du mal", "Paragraphe", "du_mal") }}
                {{ song.blockSong("La boîte de jazz", "Paragraphe", "la_boite_de_jazz") }}
                {{ song.blockSong("Le rêve du pêcheur", "Paragraphe", "le_reve_du_pecheur") }}
                {{ song.blockSong("Le sofa", "Paragraphe", "le_sofa") }}
                {{ song.blockSong("Les yeux doux", "Paragraphe", "les_yeux_doux") }}
                {{ song.blockSong("Oui j'l'adore", "Paragraphe", "oui_jladore") }}
            </div>
        </div>
    </div>
    <script src="./public/js/management-songs.js"></script>
{% endblock %}