{% macro addComment() %}
    <h2 class="mt-5">Ajouter un commentaire</h2>
    <form method="post" action="index.php?action=add-comment">
        <label for="author">Auteur :</label>
        <input type="text" name="author" class="form-control" required />
        <label for="comment">Commentaire :</label>
        <textarea name="comment" class="form-control" rows="5" required></textarea>
        <div class="text-center"><button class="mt-3 mb-5 send-comment" type="submit" onclick="return(confirm('Êtes-vous sûr de vouloir poster ce commentaire ?'));">Envoyer</button></div>
    </form>
{% endmacro %}